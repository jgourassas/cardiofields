
<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="title is-4 has-text-centered">
      <p>Oops, something went wrong! Duplicate field Name ??. Check Coding Instractions</p>
    </div>
  <% end %>
<div class = "columns">
 <div class = "column frame_1   ">

<!---------start----------------------------------->
<div class = "columns">
<div class = "column">
  <div class="field">
  <label class="label">Field Name </label>
  <div class="control">
    <%= text_input f, :name, class: "input",
                       type: "text",
                       placeholder: "name",
                      required: true,
                      minlength: 3,
                      maxlength: 45
  %>
   <%= error_tag f, :name %>
  </div>
  <p class="help"></p>
    </div>
</div><!----column-------------------->
 <div class = "column">

<div class="field">
     <label class="label">Section - Table Name </label>
     <div class="control">
    <div class="select is-primary">
  <%= select(f, :defs_table_id, @defs_tables, class: "form-control")    %>
      <option>Select Table</option>

    </div><!--select---->
     </div><!--control---->
  </div><!---field--->

 </div><!----column-------------------->



</div><!----columns--------------------------->

<!---------end start------------------------------------>


<!---------start----------------------------------->
<div class = "columns">
<div class = "column">

 <div class="field">
  <label class="label">Coding Instructions</label>
  <div class="control">
    <%= text_input f, :coding_instructions,
      class: "textarea",
      type: "input is-primary",
      placeholder: "Instructions"      %>
  </div>
  <p class="help">Instructions</p>
  </div>

</div><!----column-------------------->


</div><!----columns--------------------------->

<!---------end start------------------------------------>


<!---------start----------------------------------->
