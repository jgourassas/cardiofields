<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>
  <div class="columns">
  <div class= "column">


     <!-------------start------------------------->
   <div class="columns">

   <div class="column", style="background-color: #FF9933; ">
   <div class="field">
    <label class="label">Table Name</label>
  <div class="control">
   <%= text_input f, :name, class: "input", type: "text", placeholder: "name"  %>
   <%= error_tag f, :name %>
   <p class="help"></p>
  </div><!---control--->
  </div><!-----field--------------->

       </div><!----column 1---------------->
   <div class="column", style="background-color: #D7FF5E ;  ">
<div class="field">
  <label class="label">Notes </label>
  <div class="control">
    <%= text_input f, :note,
        class: "textarea",
        type: "input", placeholder: "Note"  %>
  <p class="help"></p>

  </div><!---control---------->
   </div><!-------field-------->
     </div><!----column 2---------------->


   </div><!-----columns----------------->
    

  </div><!-------end LEFT COLUMN--------------------->
  <div class= "column">

  <!-------------start------------------------->
   <div class="columns">

     
 <div class="column", style="background-color:#a6b1e1; ">
        <div class="field">
    <label class="label">Display Name </label>
  <div class="control">
   <%= text_input f, :display_name , class: "input", type: "text",
    placeholder: "Set a display name "  %>
   <%= error_tag f, :display_name  %>
   <p class="help"></p>
  </div><!---control--->
       </div><!-----field--------------->


     </div><!----column 1---------------->
     <div class="column is-7 frame_3">

<div class="field">
  <label class="label">CDA XML </label>
  <div class="control">
    <%= text_input f, :cda_xml,
        class: "textarea",
        type: "input", placeholder: "cda_xml"  %>
  <p class="help"></p>

  </div><!---control---------->
   </div><!-------field-------->



     </div><!----column 2---------------->


   </div><!-----columns----------------->
    <!------------end -start------------------------->


    <!----
  <%#= label f, :definition_id %>
