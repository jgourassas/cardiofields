  <%#= error_tag f, :defs_table_id %>

  <%#= label f, :table_id %>
  <%#= text_input f, :table_id %>
  <%#= error_tag f, :table_id %>
  --->
   </div><!-------end RIGTH COLUMN--------------------->
  </div><!------END columns------------------------------------->

<div class="columns">

<div class="column"  ">
<div class="field">
    <label class="label">Template ID </label>
  <div class="control">
   <%= text_input f, :template_id, class: "input", type: "text", placeholder: "template_id "  %>
   <%= error_tag f, :template_id %>
